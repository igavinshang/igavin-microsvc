<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.igavin.microsvc.dao.mapper.UserMapper">

    <select id="getByName" parameterType="string" resultType="org.igavin.microsvc.dao.dataobject.UserDO">
        SELECT id,name,mobile
        FROM users
        WHERE name = #{value}
    </select>

    <select id="getById" parameterType="long" resultType="org.igavin.microsvc.dao.dataobject.UserDO">
        SELECT id,name,mobile
        FROM users
        WHERE id = #{value}
    </select>

</mapper>